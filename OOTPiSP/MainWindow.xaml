<Window x:Class="OOTPiSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOTPiSP"
        xmlns:hw="http://schemas.hpod9.com/haley/wpf"
        mc:Ignorable="d"
        Title="Paint" Height="450" Width="800">
    <Window.Resources>
        <LinearGradientBrush x:Key="GradientStyle" StartPoint="0.5,1" EndPoint="0.5,0">
            <GradientStop Color="Yellow" Offset="0" />
            <GradientStop Color="GreenYellow" Offset="0.5" />
            <GradientStop Color="Aqua" Offset="1" />
        </LinearGradientBrush>
        
        <Thickness x:Key="ButtonMargin">1</Thickness>
        
        <Image x:Key="Circle" Source="./Assets/circle.png"/>
        <Image x:Key="Ellipse" Source="./Assets/ellipse.png"/>
        <Image x:Key="Square" Source="./Assets/square.png"/>
        <Image x:Key="Rectangle" Source="./Assets/rectangle.png"/>
        <Image x:Key="Line" Source="./Assets/line.png"/>
        <Image x:Key="EquilateralTriangle" Source="./Assets/triangle.png"/>
        <Image x:Key="IsoscelesTriangle" Source="./Assets/isosceles-triangle.png"/>
        <Image x:Key="RightTriangle" Source="./Assets/right-triangle.png"/>
        <Image x:Key="Arc" Source="./Assets/arc.png"/>
        <Image x:Key="Pen" Source="./Assets/Pen.png"/>
        <Image x:Key="Fill" Source="./Assets/Fill.png"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.05*" />
            <RowDefinition Height="11*" />
        </Grid.RowDefinitions>
        <!-- Панель инструментов -->
        <Grid Grid.Row="0" Margin="2 2 2 0" ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <hw:ColorPickerButton Grid.Column="0" Margin="{StaticResource ButtonMargin}" 
                                  Content="{StaticResource Fill}" Name="FillColorPicker" Background="{StaticResource GradientStyle}" SelectedBrush="Black"/>
            <hw:ColorPickerButton Grid.Column="1" Margin="{StaticResource ButtonMargin}" 
                                  Content="{StaticResource Pen}" Name="PenColorPicker" Background="{StaticResource GradientStyle}" SelectedBrush="Black" />
            
            <Button Grid.Column="2" Name="CircleButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Circle}"/>
            <Button Grid.Column="3" Name="EllipseButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Ellipse}" />
            <Button Grid.Column="4" Background="{StaticResource GradientStyle}" Name="SquareButton" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Square}" />
            <Button Grid.Column="5" Name="RectangleButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Rectangle}"/>
            <Button Grid.Column="6" Name="LineButton" Background="{StaticResource GradientStyle}"
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Line}" />
            <Button Grid.Column="7" Name="EquilateralTriangleButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource EquilateralTriangle}"/>
            <Button Grid.Column="8" Name="IsoscelesTriangleButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource IsoscelesTriangle}"/>
            <Button Grid.Column="9" Name="RightTriangleButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource RightTriangle}"/>
            <Button Grid.Column="10" Name="ArcButton" Background="{StaticResource GradientStyle}" 
                    Margin="{StaticResource ButtonMargin}" Click="Button_Click" Content="{StaticResource Arc}"/>
            
        </Grid>
        
        <Canvas Grid.Row="1" Name="Canvas" />
        <Border Grid.Row="1"
                Background="Transparent"
                PreviewMouseRightButtonDown="Canvas_OnPreviewMouseRightButtonDown"
                PreviewMouseLeftButtonDown="Canvas_OnPreviewMouseLeftButtonDown"
                PreviewMouseMove="Canvas_OnPreviewMouseMove"
                MouseUp="Canvas_OnMouseUp">
        </Border>
    </Grid>
</Window>